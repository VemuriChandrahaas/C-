#include <iostream>
int main() {
    int* singleInt = new int;
    *singleInt = 25;
    std::cout << "Value of singleInt: " << *singleInt << std::endl;
    int size = 3;
    int* dynamicArray = new int[size];
    for (int i = 0; i < size; ++i) dynamicArray[i] = (i + 1) * 10;
    std::cout << "Elements of dynamicArray: ";
    for (int i = 0; i < size; ++i) std::cout << dynamicArray[i] << " ";
    std::cout << std::endl;
    delete singleInt;
    singleInt = nullptr;
    delete[] dynamicArray;
    dynamicArray = nullptr;
    return 0;
}
